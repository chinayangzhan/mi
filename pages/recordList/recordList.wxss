#pageHeader {
  padding-bottom: 25rpx;
}

#mainCategoryLabel {
  width: 620rpx;
  margin: auto;
  padding: 30rpx;
  font-size: 30rpx;
  color: #2fa0d4;
  background-color: #f2f2f2;
  border-radius: 10rpx;
  margin-bottom: 25rpx;
}

#typeSelectionContainer {
  display: flex;
  width: 680rpx;
  margin: auto;
  justify-content: space-between;
}

.type-selection-item {
  position: relative;
  width: 200rpx;
  height: 175rpx;
}

.record-num-box {
  width: 200rpx;
  height: 150rpx;
  background-color: #f2f2f2;
  color: #999;
  text-align: center;
  border-radius: 10rpx;
}

.record-num-label {
  display: block;
  font-size: 30rpx;
  padding-top: 10rpx;
}

.record-type-label {
  font-size: 34rpx;
  margin-top: 6rpx;
}

.type-selection-arrow {
  display: none;
  border-width: 0 15rpx 15rpx;
  border-style: solid;
  border-color: transparent transparent #2fa0d4;
  position: absolute;
  bottom: -1px;
  left: 85rpx;
}

.type-item-selected > .record-num-box {
  background-color: #2fa0d4 !important;
  color: #fff !important;
}

.type-item-selected > .type-selection-arrow {
  display: block !important;
}

#typeSelectionSeparator {
  width: 680rpx;
  height: 4rpx;
  margin: auto;
  background-color: #2fa0d4;
  border-radius: 1rpx;
}

.record-item {
  width: 620rpx;
  margin: 0 auto 25rpx auto;
  padding: 25rpx 30rpx;
  border: 1rpx solid #999;
  border-radius: 10rpx;
}

.record-item-passed {
  border: 1rpx solid #2fa0d4 !important;
}

.record-item-name-box {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.record-item-name {
  width: 500rpx;
  font-size: 30rpx;
  color: #3e3e3e;
}

.record-item-status {
  width: 90rpx;
  font-size: 24rpx;
  text-align: right;
  margin-right: 15rpx;
}

.record-item-arrow {
  width: 24rpx;
  height: 24rpx;
  transition-property: transform;
  transition-duration: 150ms;  
}

.record-item-arrow-down {
  transform: rotate(90deg);
}

.record-item-all-checkpoint {
  font-size: 28rpx;
  color: #999;
  margin-top: 20rpx;
}

.record-item-img-box {
  width: 100%;
  display: flex;
  margin-top: 10rpx;
  flex-wrap: wrap;
  justify-content: flex-start;
}

.record-item-img-box > image {
  width: 120rpx;
  height: 120rpx;
  margin-right: 25rpx;
  margin-top: 15rpx;
}

.item-desc-title {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-top: 20rpx;
}

.record-item-desc-box {
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.item-desc-content {
  font-size: 30rpx;
  margin-top: 15rpx;
  margin-right: 20rpx;
  padding: 7rpx 2rpx;
  background-color: #2fa0d4;
  color: #fff;
  max-width: 590rpx;
}

.checkDetail {
  color: #2fa0d4;
  font-size: 25rpx;
  display: flex;
  align-items: center;
  justify-content: right;
  flex-direction: row-reverse;
  margin-right: 25rpx;
}