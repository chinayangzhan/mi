/* pages/createRecord/createRecord.wxss */
.section-box {
  width: 675rpx;
  background: #f2f2f2;
  border-radius: 20rpx;
  padding: 20rpx;
  margin: 0 auto;
  margin-bottom: 20rpx;
}

.top-box {
  display: flex;
  justify-content: space-between;  
}

.record-checkpoint-name {
  color: #2fa0d4;
  font-size: 35rpx;
}

.record-entity-name {
  color: #3f3f3f;
  font-size: 38rpx;
}

.top-button-box {
  width: 150rpx;
  margin-right: 20rpx;    
}

.top-button-box view {
  padding: 10rpx;
  font-size: 25rpx;
  border: 1rpx solid #2fa0d4;
  border-radius: 10rpx; 
  /* padding: 10rpx; */
  display: flex;
  justify-content: center;
  align-items: center;
}

.top-button-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.scan {
  background-color: #2fa0d4;
  color: white;
  margin-bottom: 10rpx;
}

.choice {
  background-color: white;
  color: #2fa0d4;
}

.select-photo-box {
  display: flex;
  flex-wrap: wrap;
}

.camaro-box {
  width: 100rpx;
  height: 100rpx;
  background-color: #2fa0d4;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 10rpx; 
  margin: 10rpx 10rpx;
}

.camera-icon {
  width: 75rpx;
  height: 75rpx;
  background-color: #2fa0d4;
}

.photo-item {
  width: 100rpx;
  height: 100rpx;
  position: relative;
  margin: 10rpx 10rpx;
}

.photo-item image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.clear-icon {
  position: absolute;
  top: -6px;
  right: -6px;
}

.desc-list {
  display: flex;
  flex-wrap: wrap;
}

.desc-item {
  height: 77rpx;
  background-color: #cdcdcd;
  font-size: 23rpx;
  color: white;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  margin: 10rpx; 
}

.desc-item-checked {
  background-color: #2fa0d4;
}

.desc-select-box {
  width: 12px;
  height: 12px;
}

.submit-button-box {
  display: flex;
  justify-content: space-around;
  margin-top: 60rpx;
}

.submit-button-box view {
  width: 200rpx;
  height: 75rpx;
  border: 1rpx solid #2fa0d4;
  font-size: 25rpx;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.record-btn1 {
  background: white;
  color: #2fa0d4;
}

.record-btn2 {
  background: #2fa0d4;
  color: white;
}

.btn-hover-class {
  opacity: 0.7;
}

.desc-item-add {
  background-color: white;
  color: #3f3f3f;
}

.custom-desc-box {
  width: 680rpx;
  height: 55rpx;
  padding: 10rpx 0;
  background: #D7D7D7; 
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.custom-desc-input {
  width: 540rpx;
  height: 55rpx;
  font-size: 20rpx;
  border: 1rpx solid whitesmoke;
  background-color: white; 
}

.image-button-box {
  display: flex;
  justify-content: center;
  align-items: center;
  background: white;
  border-radius: 10rpx;
}

.image-button {
  width: 45rpx;
  height: 45rpx;
}

.check-standard {
  color: #2fa0d4;
  display: flex;
  justify-content: center;
  align-items: center;
  float: right;
  font-size: 25rpx;
  margin-top: 40rpx;
  margin-right: 30rpx;
}

.check-standard icon {
  margin-right: 10rpx;
}
